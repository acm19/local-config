#!/bin/bash
# Distributed under the terms of the GNU General Public License v3

# print date for dwm status bar
current_date=$(date +"%a %b %e %H:%M")
muted=$(test "$(awk '{ print $2 }' <(pactl get-sink-mute @DEFAULT_SINK@))" = "yes" && echo off || echo on)

if [ "$muted" == "off" ]; then
  vol=$muted
else
  # uses front left speaker volume as right should be the same
  vol="$(awk '{ print $5 }' <(pactl get-sink-volume @DEFAULT_SINK@ | head -n 1))"
fi

bat_capacity=$(cat /sys/class/power_supply/BAT0/capacity)
bat_status=$(cat /sys/class/power_supply/BAT0/status)
YELLOW="^c#FFFF00^"
RED="^c#FF0000^"
WARNING=45
CRITICAL=30
if [ "$bat_capacity" -le "$WARNING" ] && [ "$bat_capacity" -gt "$CRITICAL" ]; then
  bat_colour=$YELLOW
elif [ "$bat_capacity" -le "$CRITICAL" ]; then
  bat_colour=$RED
fi

echo "$bat_status ${bat_colour}${bat_capacity}% ^c#FFFFFF^| Vol $vol | $current_date"
